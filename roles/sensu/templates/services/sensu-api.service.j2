[Unit]
Description=sensu api

[Service]
User=sensu
Group=sensu
ExecStart=/opt/sensu/bin/sensu-api -c "{{ base.config_dir }}"/conf.d -d "{{ base.config_dir }}"/conf.d -e "{{ base.config_dir }}"/extensions -l /var/log/sensu/sensu-api.log
KillMode=process
Restart=on-failure
RestartSec=1min

[Install]
WantedBy=multi-user.target
